<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gradeListParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:id="@+id/textViewGradeIdTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade ID:"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="6dp" />

            <TextView
                android:id="@+id/textViewGradeValueTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade: "
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/textViewSubjectIdTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject ID:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="6dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/gradeListGradeId"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="GradeId"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="32dp" />


            <TextView
                android:id="@+id/gradeListGradeValue"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="gradeListGradeValue"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="21dp" />


            <TextView
                android:id="@+id/gradeListGradeSubjectId"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Subject id"
                tools:layout_editor_absoluteY="32dp" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note:"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="339dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/gradeListGradeNote"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="note"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="339dp" />
        </TableRow>


    </TableLayout>


</androidx.cardview.widget.CardView>